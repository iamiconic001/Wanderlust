<% layout ("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <br><br>
    <h2>Create a New Listing</h2>

    

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <lable for="title" class="form-lable" >Title</lable>
        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
        <div class="valid-feedback">Title looks great!</div>
        </div>
        
        

        <div class="mb-3">
        <lable for="description" class="form-lable" >Description</lable>
        <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">Enter valid description please !</div>
        <div class="valid-feedback">Well described, fabulous ! </div>
    </div>

        
        <div class="mb-3">
            <lable for="image" class="form-lable" >Upload Image</lable>
            <input name="listing[image]" type="file" class="form-control" required/>
            <div class="invalid-feedback">Enter valid image url !</div>
            <div class="valid-feedback">Oh ! Image is so catchy</div>
            </div>
        
        
    <div class="row">
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-lable" >Price</lable>
            <input name="listing[price]" placeholder="1200" type="text" class="form-control" required/>
            <div class="invalid-feedback">Price should be valid </div>
            <div class="valid-feedback">Prices are so good !</div>
        </div>
        
      

        <div class="mb-3 col-md-8">
            <lable for="location" class="form-lable" >Location</lable>
            <input name="listing[location]" placeholder="Shimla" type="text" class="form-control" required/>
            <div class="invalid-feedback">Location cannot be invalid </div>
            <div class="valid-feedback">Exciting location !</div>
        </div>
    </div>
        
        
        

        <div class="mb-3">
            <lable for="country" class="form-lable" >Country</lable>
             <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>
             <div class="invalid-feedback">Enter valid country Name</div>
             <div class="valid-feedback">Wow ! it's a wonderful country</div>
        </div>
       
        

        <button class="add-btn btn btn-dark">Add</button>
        <br><br>

    </form>
    </div>
</div>
